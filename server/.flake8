[flake8]
# Maximum line length
max-line-length = 120

# Ignore specific error codes
# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
# E501: line too long (handled by black)
# F401: module imported but unused (sometimes needed for __init__.py)
extend-ignore = E203, W503, E501

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    migrations,
    alembic

# Maximum complexity
max-complexity = 15

# Per-file ignores
per-file-ignores =
    __init__.py: F401, F403
    tests/*: F401, F811

# Count errors
count = True

# Show source code
show-source = True

# Show statistics
statistics = True
